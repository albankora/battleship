{
    "require": {
        "nikic/fast-route": "^0.6.0",
        "zendframework/zend-validator": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/App/",
            "Core\\": "app/Core/",
            "Exceptions\\": "app/Exceptions/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "composer dumpautoload -o"
        ],
        "post-update-cmd": [
            "composer dumpautoload -o"
        ]
    }
}